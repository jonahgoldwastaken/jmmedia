{
  "github": {
    "enabled": true
  },
  "builds": [
    {"src": "website/package.json", "use": "@now/next"},
    {"src": "api/**/*.ts", "use": "@now/node"}
  ],
  "routes": [
    { "src": "/api/components(.*)", "status": 404 },
    { "src": "/api", "dest": "/api/index.ts" },
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/project/(.*)", "dest": "/website/project?slug=$1" },
    { "src": "/(.*)", "dest": "/website/$1" }
  ]
}
