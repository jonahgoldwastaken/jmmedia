{
  "name": "jmmedia",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn:dev:web\" \"yarn:dev:server\"",
    "dev:web": "yarn workspace @jmmedia/web dev",
    "dev:server": "yarn workspace @jmmedia/server dev",
    "typecheck": "concurrently \"yarn:typecheck:web\" \"yarn:typecheck:server\"",
    "typecheck:web": "tsc --noEmit --project web/tsconfig.json",
    "typecheck:server": "tsc --noEmit --project server/tsconfig.json",
    "heroku-postbuild": "./scripts/heroku.build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3",
    "concurrently": "^5.2.0"
  },
  "dependencies": {
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "./server/src/*.{ts}": [
      "prettier --write"
    ],
    "./web/{components,generated,interfaces,libs,pages,theme,types}/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
