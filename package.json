{
  "name": "jmmedia",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn:dev:web\" \"yarn:dev:server\"",
    "dev:web": "cd web && yarn dev",
    "dev:server": "cd server && yarn dev",
    "tsc:web": "tsc --noEmit --project web/tsconfig.json",
    "tsc:server": "tsc --noEmit --project server/tsconfig.json"
  },
  "workspaces": [
    "web",
    "server"
  ],
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3",
    "concurrently": "^5.2.0"
  },
  "dependencies": {
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tsc:web && yarn tsc:server && lint-staged"
    }
  },
  "lint-staged": {
    "./server/src/*.{ts}": [
      "prettier --write"
    ],
    "./web/{components,generated,interfaces,libs,pages,theme,types}/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
