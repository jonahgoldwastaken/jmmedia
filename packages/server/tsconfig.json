{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "composite": false,
    "lib": [
      "ES2020",
      "esnext.asynciterable"
    ],
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
